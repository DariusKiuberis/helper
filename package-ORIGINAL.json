{
  "name": "@darius-kiuberis/helper",
  "version": "1.0.16",
  "description": "My helpers",
  "types": "lib",
  "main": "./lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/DariusKiuberis/helper.git"
  },
  "files": [
    "lib/"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc -p tsconfig.json && tsc -p tsconfig-cjs.json",
    "watch:build": "tsc --watch",
    "watch:server": "nodemon './lib/esm/index.js' --watch './lib'",
    "start:dev": "cross-env NODE_ENV=development npm-run-all  clean build --parallel watch:build watch:server --print-label",

    "prod": "cross-env NODE_ENV=production npm-run-all clean build --print-label && yalc publish --files",

    "darius" : "nodemon",

    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "prettier:format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prepare": "husky install",
    "test": "jest --watch",
    "coverage": "jest --coverage"
  },
  "keywords": [
    "helper"
  ],
  "author": "Darius Kiuberis",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^26.0.21",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.35",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "dotenv": "^8.2.0",
    "environ": "^3.0.3",
    "lodash": "^4.17.21",
    "npm-run-all": "^4.1.5"
  }
}
